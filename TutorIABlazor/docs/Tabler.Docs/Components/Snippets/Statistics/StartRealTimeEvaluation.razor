@using Tabler.Docs.Model.Dataset
<Card Size="CardSize.Small" class="p-0 border-0 bg-transparent">
    <button class="w-100 text-start border-0 bg-white p-0" style="cursor: pointer;" @onclick="CardOnClick">
        <CardBody class="d-flex align-items-center user-select-none">
            <span class="bg-purple text-white avatar me-3">
                <Icon IconType="@TablerIcons.Abacus" />
            </span>
            <div class="me-3 lh-sm">
                <div class="strong">
                    Empezar evaluación en tiempo real
                </div>
                <div class="text-secondary">@(Skills.Count()) habilidades a entrenar</div>
            </div>
        </CardBody>
    </button>
</Card>
@code
{
    [Parameter] public List<StudentSkill> Skills { get; set; }

    private async Task CardOnClick()
    {
        _navigation.NavigateTo("/select-skills");
    }
}